# Дополнительная задача
# В массивах А размером 9 и В размером 7 заменить максимальные элементы на среднее арифметическое значение элементов, раположенных после максимального, в том массиве, для которого максимальный элемент расположен дальше от конца массива. Поиск максимального элемента осуществить в методе.
print('Задание 2.2')
def find_max_and_replace(arr):
    max_value = max(arr)
    max_indices = [i for i, x in enumerate(arr) if x == max_value]

    max_index = max(max_indices)
    elements_after_max = arr[max_index + 1:]

    if elements_after_max:
        average = sum(elements_after_max) / len(elements_after_max)
        for i in max_indices:
            arr[i] = average
    return arr

def input_array(prompt, expected_length):
    while True:
        try:
            user_input = input(prompt).split()
            if len(user_input) != expected_length:
                raise ValueError("Неверное количество элементов.")
            arr = [float(x) for x in user_input]
            return arr
        except ValueError:
            print(f"Ошибка: все элементы должны быть числами. Введите ровно {expected_length} чисел, разделенных пробелами.")

A = input_array("Введите 9 элементов массива A (через пробел): ", 9)
B = input_array("Введите 7 элементов массива B (через пробел): ", 7)

A_modified = find_max_and_replace(A)
B_modified = find_max_and_replace(B)

print("Измененный массив A:", A_modified)
print("Измененный массив B:", B_modified)
